@using Tenant.Site.Models

@model PropertyListSearchModel

<div class="container">
    <div id="search">
        <div class="margin-bottom-small">
            <div class="col-md-3">
                @Html.LabelFor(m => m.Area)
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.Area)
            </div>
        </div>
        <div class="margin-bottom-small">
            <div class="col-md-3">
                @Html.LabelFor(m => m.PostCode)
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.PostCode)
            </div>
        </div>

        <button id="searchButton" class="btn btn-default">Search</button>
    </div>

    <script type="text/x-kendo-tmpl" id="Properties">
        <div class="Property">
            <img src="#:ImagePath#" alt="#:PostCode# image" />
            <h3>#:Beds# Beds, #:PostCode#</h3>
        </div>
    </script>

        @(Html.Kendo().ListView<PropertyListModel>()
            .Name("PropertyList")
            .TagName("div")
            .ClientTemplateId("Properties")
            .DataSource(data =>
            {
                data.Read(read => read.Action("List_GetProperties", "Property"));
                data.PageSize(21);
            })
            .Pageable()
        )
</div>

<script type="text/javascript">
    $("#searchButton").on('click', function (e) {
        e.preventDefault();

        $.ajax()
    })
</script>